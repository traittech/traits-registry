{
   "fungible": {
      "$id": "https://raw.githubusercontent.com/traittech/traits-registry/refs/heads/main/traits/fungible/trait.json",
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "title": "Details of a fungible token",
      "description": "The trait provides essential info about a fungible token.",
      "type": "object",
      "properties": {
         "symbol": {
            "description": "The short symbol of the token.",
            "type": "string",
            "minLength": 1,
            "maxLength": 8
         },
         "decimals": {
            "description": "The number of decimal places of the token.",
            "type": "integer",
            "minimum": 0,
            "maximum": 30
         }
      },
      "required": [
         "symbol",
         "decimals"
      ],
      "additionalProperties": false
   },
   "named": {
      "$id": "https://raw.githubusercontent.com/traittech/traits-registry/refs/heads/main/traits/named/trait.json",
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "title": "Name of an on-chain entity",
      "description": "This trait provides the name of an on-chain entity.",
      "type": "object",
      "properties": {
         "name": {
            "description": "The name of the object.",
            "type": "string",
            "minLength": 1,
            "maxLength": 32
         }
      },
      "required": [
         "name"
      ],
      "additionalProperties": false
   },
   "tech.trait.wallet.nft_collection_listing_image": {
      "$id": "https://raw.githubusercontent.com/traittech/traits-registry/refs/heads/main/traits/tech.trait.wallet/nft_collection_listing_image/trait.json",
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "title": "NFT image used in the list of NFT collections.",
      "description": "The trait provides info about an image used in the list of NFT collections. Expected size of the image: 1024x1024px. Suported formats: WebP, PNG / APNG, JPEG / JPG, GIF, SVG.",
      "type": "object",
      "properties": {
         "image_url": {
            "description": "The link to the file with the image.",
            "type": "string",
            "format": "url",
            "maxLength": 256
         }
      },
      "required": [
         "image_url"
      ],
      "additionalProperties": false
   },
   "tech.trait.wallet.nft_token_attributes": {
      "$id": "https://raw.githubusercontent.com/traittech/traits-registry/refs/heads/main/traits/tech.trait.wallet/nft_token_attributes/trait.json",
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "title": "NFT attributes",
      "description": "Attributes of an NFT displayed on the token' page.",
      "type": "object",
      "properties": {
         "attributes": {
            "description": "The list of NFT attributes.",
            "type": "array",
            "items": {
               "oneOf": [
                  {
                     "$ref": "#/$defs/nft_attribute_number"
                  },
                  {
                     "$ref": "#/$defs/nft_attribute_percentage"
                  },
                  {
                     "$ref": "#/$defs/nft_attribute_string"
                  },
                  {
                     "$ref": "#/$defs/nft_attribute_boolean"
                  },
                  {
                     "$ref": "#/$defs/nft_attribute_date"
                  },
                  {
                     "$ref": "#/$defs/nft_attribute_duration"
                  }
               ]
            },
            "minItems": 1
         }
      },
      "required": [
         "attributes"
      ],
      "$defs": {
         "nft_attribute_number": {
            "type": "object",
            "properties": {
               "name": {
                  "description": "The name of the attribute.",
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 32
               },
               "display_type": {
                  "description": "The type of the attribute.",
                  "type": "string",
                  "enum": [
                     "number"
                  ]
               },
               "value": {
                  "description": "The value of the attribute.",
                  "type": "number"
               }
            },
            "required": [
               "name",
               "display_type",
               "value"
            ],
            "additionalProperties": false
         },
         "nft_attribute_percentage": {
            "type": "object",
            "properties": {
               "name": {
                  "description": "The name of the attribute.",
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 32
               },
               "display_type": {
                  "description": "The type of the attribute.",
                  "type": "string",
                  "enum": [
                     "percentage"
                  ]
               },
               "value": {
                  "description": "The value of the attribute.",
                  "type": "number",
                  "minimum": -100,
                  "maximum": 100
               }
            },
            "required": [
               "name",
               "display_type",
               "value"
            ],
            "additionalProperties": false
         },
         "nft_attribute_string": {
            "type": "object",
            "properties": {
               "name": {
                  "description": "The name of the attribute.",
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 32
               },
               "display_type": {
                  "description": "The type of the attribute.",
                  "type": "string",
                  "enum": [
                     "string"
                  ]
               },
               "value": {
                  "description": "The value of the attribute.",
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 32
               }
            },
            "required": [
               "name",
               "display_type",
               "value"
            ],
            "additionalProperties": false
         },
         "nft_attribute_boolean": {
            "type": "object",
            "properties": {
               "name": {
                  "description": "The name of the attribute.",
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 32
               },
               "display_type": {
                  "description": "The type of the attribute.",
                  "type": "string",
                  "enum": [
                     "boolean"
                  ]
               },
               "value": {
                  "description": "The value of the attribute.",
                  "type": "boolean"
               }
            },
            "required": [
               "name",
               "display_type",
               "value"
            ],
            "additionalProperties": false
         },
         "nft_attribute_date": {
            "type": "object",
            "properties": {
               "name": {
                  "description": "The name of the attribute.",
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 32
               },
               "display_type": {
                  "description": "The type of the attribute.",
                  "type": "string",
                  "enum": [
                     "date"
                  ]
               },
               "value": {
                  "description": "The value of the attribute.",
                  "type": "string",
                  "anyOf": [
                     {
                        "format": "date-time"
                     },
                     {
                        "format": "date"
                     },
                     {
                        "format": "time"
                     }
                  ]
               }
            },
            "required": [
               "name",
               "display_type",
               "value"
            ],
            "additionalProperties": false
         },
         "nft_attribute_duration": {
            "type": "object",
            "properties": {
               "name": {
                  "description": "The name of the attribute.",
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 32
               },
               "display_type": {
                  "description": "The type of the attribute.",
                  "type": "string",
                  "enum": [
                     "duration"
                  ]
               },
               "value": {
                  "description": "The value of the attribute.",
                  "type": "string",
                  "format": "duration"
               }
            },
            "required": [
               "name",
               "display_type",
               "value"
            ],
            "additionalProperties": false
         }
      },
      "additionalProperties": false
   },
   "tech.trait.wallet.nft_token_cover_image": {
      "$id": "https://raw.githubusercontent.com/traittech/traits-registry/refs/heads/main/traits/tech.trait.wallet/nft_token_cover_image/trait.json",
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "title": "NFT cover image",
      "description": "NFT image used on the page with the details of the token. Expected size of the image: 2048x2048px. Suported formats: WebP, PNG / APNG, JPEG / JPG, GIF, SVG.",
      "type": "object",
      "properties": {
         "image_url": {
            "description": "The link to the file with the image.",
            "type": "string",
            "format": "url",
            "maxLength": 256
         }
      },
      "required": [
         "image_url"
      ],
      "additionalProperties": false
   },
   "tech.trait.wallet.nft_token_description": {
      "$id": "https://raw.githubusercontent.com/traittech/traits-registry/refs/heads/main/traits/tech.trait.wallet/nft_token_description/trait.json",
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "title": "Description of the NFT token.",
      "description": "The trait provides description of the NFT token displayed to the user in TRAIT wallet.",
      "type": "object",
      "properties": {
         "nft_token_description": {
            "description": "Description of the NFT token displayed to the user. It should be a plain text.",
            "type": "string",
            "maxLength": 4096
         }
      },
      "required": [
         "nft_token_description"
      ],
      "additionalProperties": false
   },
   "tech.trait.wallet.nft_token_listing_image": {
      "$id": "https://raw.githubusercontent.com/traittech/traits-registry/refs/heads/main/traits/tech.trait.wallet/nft_token_listing_image/trait.json",
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "title": "NFT image used in the list of NFTs",
      "description": "The trait provides info about an NFT image used in the list of NFTs. Expected size of the image: 1024x1024px. Suported formats: WebP, PNG / APNG, JPEG / JPG, GIF, SVG.",
      "type": "object",
      "properties": {
         "image_url": {
            "description": "The link to the file with the image.",
            "type": "string",
            "format": "url",
            "maxLength": 256
         }
      },
      "required": [
         "image_url"
      ],
      "additionalProperties": false
   },
   "tech.trait.wallet.square_icon": {
      "$id": "https://raw.githubusercontent.com/traittech/traits-registry/refs/heads/main/traits/tech.trait.wallet/square_icon/trait.json",
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "title": "Small squre icon",
      "description": "The trait provides info about a small squre icon of an on-chain entity, used by the TRAIT Wallet. Size of the icon: 512x512px. Suported formats: WebP, PNG / APNG, JPEG / JPG, GIF, SVG.",
      "type": "object",
      "properties": {
         "image_url": {
            "description": "The link to the file with the icon image.",
            "type": "string",
            "format": "url",
            "maxLength": 256
         }
      },
      "required": [
         "image_url"
      ],
      "additionalProperties": false
   }
}